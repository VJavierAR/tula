<odoo>
    <data>

        <record model="ir.ui.view" id="view_location_form_update">
            <field name="name">view.location.form.update</field>
            <field name="model">stock.location</field>
            <field name="inherit_id" ref="stock.view_location_form"/>
            <field name="arch" type="xml">

                <xpath expr="//field[@name='return_location']" position="after">
                    <field name="mostrar_stock" force_save="1"/>
                </xpath>

            </field>
        </record>

    </data>
</odoo>