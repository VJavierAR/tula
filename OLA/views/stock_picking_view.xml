<odoo>
    <data>
        <record model="ir.ui.view" id="stock_picking_tree_update">
            <field name="name">stock.picking.tree.update</field>
            <field name="model">stock.picking</field>
            <field name="inherit_id" ref="stock.vpicktree"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='activity_exception_decoration']" position="after">
                    <field name="urgencia" options='{"bg_color": "khaki: urgencia == \"Urgente\"; lightcoral: urgencia == \"Muy urgente\" "}' />
                </xpath>
            </field>
        </record>
        <record model="ir.ui.view" id="stock_picking_form_update">
            <field name="name">stock.picking.form.update</field>
            <field name="model">stock.picking</field>
            <field name="inherit_id" ref="stock.view_picking_form"/>
            <field name="arch" type="xml">
                <xpath expr="//button[@name='action_cancel']" position="after">
                    <button name="print_vale_de_entrega" type="object" string="Imprimir vale de entrega" class="oe_highlight"/>
                </xpath>
                <xpath expr="//field[@name='origin']" position="after">
                    <field name="urgencia"/>
                </xpath>
            </field>
        </record>


            <record id="view_picking_form_inherit" model="ir.ui.view">
        <field name="name">stock.picking.form.inherit</field>
        <field name="model">stock.picking</field>
        <field name="inherit_id" ref="stock.view_picking_form"/>
        <field name="arch" type="xml">
<!--            <xpath expr="//field[@name='state']" position="attributes">-->
<!--                <attribute name="statusbar_visible">draft,confirmed,partially_available,assigned,printed,done</attribute>-->
<!--            </xpath>-->
            <xpath expr="//button[@name='%(stock.action_report_delivery)d']" position="attributes">
                <attribute name="invisible">1</attribute>
            </xpath>
            <xpath expr="//button[@name='do_print_picking']" position="attributes">
                <attribute name="invisible">1</attribute>
            </xpath>
            <xpath expr="//button[@name='button_validate']" position="attributes">
                <attribute name="invisible">1</attribute>
            </xpath>
            <xpath expr="//button[@name='action_assign']" position="after">
                <button name="%(action_view_stock_picking_validate)d" string="Validar" attrs="{'invisible': [('state', '!=', 'printed')]}" type="action" class="send_and_print btn-primary" groups="base.group_user"/>
                <button name="%(action_view_stock_picking_print)d" string="Imprimir" type="action" groups="base.group_user"/>
            </xpath>
            <xpath expr="//field[@name='user_id']" position="after">
                <field name="user_print_id" readonly="1"/>
                <field name="user_validate_id" readonly="1"/>
            </xpath>
        </field>
    </record>

    </data>
</odoo>