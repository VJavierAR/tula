<odoo>
    <data>
        <record model="ir.ui.view" id="stock_picking_tree_update">
            <field name="name">stock.picking.tree.update</field>
            <field name="model">stock.picking</field>
            <field name="inherit_id" ref="stock.vpicktree"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='activity_exception_decoration']" position="after">
                    <field name="urgencia" options='{"bg_color": "khaki: urgencia == \"Urgente\"; lightcoral: urgencia == \"Muy urgente\" "}' />
                </xpath>
            </field>
        </record>
        <record model="ir.ui.view" id="stock_picking_form_update">
            <field name="name">stock.picking.form.update</field>
            <field name="model">stock.picking</field>
            <field name="inherit_id" ref="stock.view_picking_form"/>
            <field name="arch" type="xml">
                <xpath expr="//button[@name='action_cancel']" position="after">
                    <button name="print_vale_de_entrega" type="object" string="Imprimir vale de entrega" class="oe_highlight"/>
                </xpath>
                <xpath expr="//field[@name='origin']" position="after">
                    <field name="urgencia"/>
                </xpath>
            </field>
        </record>

    </data>
</odoo>