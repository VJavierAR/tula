<odoo>
    <data>
        <record model="ir.ui.view" id="view_order_line_tree_update">
            <field name="name">view.order.line.tree.update</field>
            <field name="model">sale.order.line</field>
            <field name="inherit_id" ref="sale.view_order_line_tree"/>
            <field name="arch" type="xml">

                <xpath expr="//field[@name='price_subtotal']" position="after">
                    <field name="bloqueo" />
                </xpath>

                <xpath expr="//form[1]/sheet[1]/notebook[1]/page[@name='order_lines']/field[@name='order_line']/tree[1]/field[@name='name']" position="after">
                    <field name="order_partner_id" invisible="1"/>
                    <!--<field name="order_id"/>-->
                </xpath>
            </field>
        </record>
    </data>
</odoo>