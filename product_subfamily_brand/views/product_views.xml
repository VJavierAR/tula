<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <record id="product_template_only_form_view_inherit" model="ir.ui.view">
        <field name="name">product.template.product.form.inherit</field>
        <field name="model">product.template</field>
        <field name="inherit_id" ref="product.product_template_only_form_view"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='barcode']" position="after">
                <field name="subfamily_id"/>
                <field name="brand_id"/>
                <field name="product_supplier_id"/>
            </xpath>
        </field>
    </record>
    <record id="product_subfamily_view_form" model="ir.ui.view">
        <field name="name">product.subfamily.view.form</field>
        <field name="model">product.subfamily</field>
        <field name="arch" type="xml">
            <form string="_form">
                <sheet>
                    <group>
                        <field name="name"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>
    <record id="product_brand_view_form" model="ir.ui.view">
        <field name="name">product.brand.view.form</field>
        <field name="model">product.brand</field>
        <field name="arch" type="xml">
            <form string="_form">
                <sheet>
                    <group>
                        <field name="name"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>
    <record id="product_supplier_view_form" model="ir.ui.view">
        <field name="name">product.supplier.view.form</field>
        <field name="model">product.supplier</field>
        <field name="arch" type="xml">
            <form string="_form">
                <sheet>
                    <group>
                        <field name="name"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="action_product_subfamily" model="ir.actions.act_window">
        <field name="name">Subfamilia de producto</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">product.subfamily</field>
        <field name="view_mode">tree,form</field>
    </record>
    <record id="action_product_brand" model="ir.actions.act_window">
        <field name="name">Marca de producto</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">product.brand</field>
        <field name="view_mode">tree,form</field>
    </record>
    <record id="action_product_supplier" model="ir.actions.act_window">
        <field name="name">Proveedor de producto</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">product.supplier</field>
        <field name="view_mode">tree,form</field>
    </record>

    <menuitem id="menuitem_product_subfamily" name="Subfamilias de producto" parent="stock.menu_product_in_config_stock" action="action_product_subfamily" sequence="3"/>
    <menuitem id="menuitem_product_brand" name="Marcas de producto" parent="stock.menu_product_in_config_stock" action="action_product_brand" sequence="4"/>
    <menuitem id="menuitem_product_supplier" name="Proveedor de producto" parent="stock.menu_product_in_config_stock" action="action_product_supplier" sequence="5"/>
</odoo>
