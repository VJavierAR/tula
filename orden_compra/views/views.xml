<odoo>
  <data>

    <record model="ir.ui.view" id="factura_update">
      <field name="name">factura_update</field>
      <field name="model">account.move</field>
      <field name="inherit_id" ref="account.view_move_form"/>
      <field name="arch" type="xml">
        <xpath expr="//form[1]/sheet[1]/group[1]/group[2]/field[@name='company_id']" position="after">
          <field name="almacen" attrs="{'invisible': [['type','!=','in_invoice']],'required': [['type','=','in_invoice']]}"/>
        </xpath>
        <xpath expr="//form[1]/sheet[1]/notebook[1]/page[1]/field[@name='invoice_line_ids']/tree[1]/field[@name='price_unit']" position="after">
          <field name="costo"/>
          <field name="precio"/>
        </xpath>
      </field>
    </record>

<record model="ir.ui.view" id="res_company_form_view_update">
    <field name="name">res.company.form.update</field>
    <field name="model">res.company</field>
    <field name="inherit_id" ref="base.view_company_form"/>
    <field name="arch" type="xml">
          <xpath expr="//field[@name='website']" position="after">
            <field name="orden_compra"/>
          </xpath>
    </field>
</record>




<record model='ir.ui.view' id='stock_warehouse_update'>
  <field name="name">stock.warehouse.update</field>
  <field name="model">stock.warehouse</field>
  <field name='inherit_id' ref='stock.view_warehouse'/>
  <field name='arch' type='xml'>
      <xpath expr="//field[@name='code']" position="after">
    <field name="auto_recepcion"/>
    <field name="stock_visible"/>
  </xpath>
  </field>
</record>



<record id="purchase_order_alerta_view" model="ir.ui.view">
<field name="model">purchase.order.alerta</field>
<field name="arch" type="xml">
    <form string="Alerta">
        <field name="mensaje" readonly='1'/>
        <footer>
            <button special="cancel" string="Cerrar"  class="btn-secondary" />
        </footer>
    </form>
</field>
</record>

<record model="ir.ui.view" id="compra_update">
  <field name="name">compra_update</field>
  <field name="model">purchase.order</field>
  <field name="inherit_id" ref="purchase.purchase_order_form"/>
  <field name="arch" type="xml">
    <xpath expr="//button[@name='action_confirm']" position="attributes">
      <attribute name="name">boton_confirmar</attribute>
    </xpath>
    
  </field>
</record>







  </data>
</odoo>