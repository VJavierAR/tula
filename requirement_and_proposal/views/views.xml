<odoo>
  <data>
    <record model="ir.ui.view" id="proposal_purchase_list">
      <field name="name">proposal.purchase.list</field>
      <field name="model">proposal.purchase</field>
      <field name="arch" type="xml">
        <tree>
          <field name="name"/>
          <field name="product_id"/>
          <field name="cantidad"/>
          <field name="costo"/>
          <field name="proveedor"/>
          <field name="condicion"/>
        </tree>
      </field>
    </record>

    <record model="ir.actions.act_window" id="proposal_purchase_action_window">
      <field name="name">proposal.purchase.window</field>
      <field name="res_model">proposal.purchase</field>
      <field name="view_mode">tree,form</field>
    </record>


      <record model="ir.ui.view" id="inherit_proposal_sale_order">
            <field name="name">proposal.order</field>
            <field name="model">sale.order</field>
            <field name="inherit_id" ref="sale.view_order_form"/>
            <field name="arch" type="xml">
              <xpath expr="//page[@name='order_lines']" position="after">
                  <page>
                      <field name="lines_requirements">
                          <tree  editable="bottom">
                              <field name="name" readony="1"/>
                              <field name="descripcion" />
                              <field name="marca" />
                              <field name="modelo" />
                              <field name="cantidad" />
                              <field name="presupuesto" />
                              <field name="proveedor" />
                              <field name="condicion" />
                              <field name="completo" />
                              <field name="estado_cliente" />
                              <field name="estado" />
                          </tree>
                      </field>
                  </page>
              </xpath>
            </field>
        </record>


