            <record id="wizard_proposal_form" model="ir.ui.view">
            <field name="name">wizard.proposal.form</field>
            <field name="model">wizard.proposal</field>
            <field name="arch" type="xml">
                <form>
                    <group>
                      <field name="detalle" readony="1"/>
                      <field name="rel_id" invisible="1"/>
                    </group>
                  <group>
                    <group>
                      <field name="product_id"></field>
                      <field name="cantidad"></field>
                      <field name="costo"></field>
                    </group>
                    <group>
                      <field name="proveedor"></field>
                      <field name="condicion"></field>
                    </group>
                  </group>
                    <footer>
                        <button string="Aceptar" name="confirm" type="object" class="send_and_print btn-primary"/>
                        <button string="Cancelar" class="btn-secondary" special="cancel" />
                    </footer>
                </form>
            </field>
        </record>

  </data>
    <data noupdate="1">
        <record id="seq_requirement_name" model="ir.sequence" >
            <field name="name">Name requiement</field>
            <field name="code">requirement.seq</field>
            <field name="active">True</field>
            <field name="prefix">COT-</field>
            <field name="number_increment">1</field>
            <field name="number_next">1</field>
            <field name="padding">3</field>
        </record>
    </data>
</odoo>