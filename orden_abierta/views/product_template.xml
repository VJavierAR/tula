<odoo>
    <data>

        <record model="ir.ui.view" id="product_template_update_form_view">
            <field name="name">product.template.product.form.update</field>
            <field name="model">product.template</field>
            <field name="inherit_id" ref="product.product_template_form_view"/>
            <field name="arch" type="xml">

                <xpath expr="//page[@name='general_information']" position="after">
                    <page name="codigos_de_producto" string="CÃ³digos de producto">
                        <field name="id" invisible="1"/>
                        <field name="codigos_de_producto">
                            <tree editable='bottom'> <!-- editable='bottom' -->
                                <field name="id"/>
                                <field name="cliente"/>
                                <field name="codigo_producto"/>
                            </tree>
                        </field>
                    </page>
                </xpath>

            </field>
        </record>


        <record model="ir.ui.view" id="product_template_tree_view_update">
            <field name="name">product.template.product.tree.update</field>
            <field name="model">product.template</field>
            <field name="inherit_id" ref="product.product_template_tree_view"/>
            <field name="arch" type="xml">

                <xpath expr="//field[@name='uom_id']" position="after">
                    <field name="en_transito"/>
                    <field name="cantidad_pedidos"/>
                    <field name="cantidad_disponible"/>
                </xpath>

            </field>
        </record>

        <record model="ir.ui.view" id="product_template_tree_view_update">
            <field name="name">product.product.tree.update</field>
            <field name="model">product.product</field>
            <field name="inherit_id" ref="product.product_product_tree_view"/>
            <field name="arch" type="xml">

                <xpath expr="//field[@name='uom_id']" position="after">
                    <field name="en_transito"/>
                    <field name="cantidad_pedidos"/>
                    <field name="cantidad_disponible"/>
                </xpath>

            </field>
        </record>

    </data>
</odoo>