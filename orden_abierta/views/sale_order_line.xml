<odoo>
    <data>

        <record model="ir.ui.view" id="sale_order_form_update">
            <field name="name">sale.order.form.update</field>
            <field name="model">sale.order</field>
            <field name="inherit_id" ref="sale.view_order_form"/>
            <field name="arch" type="xml">

                <!--
                <xpath expr="//form[1]/sheet[1]/notebook[1]/page[@name='order_lines']/field[@name='order_line']/tree[1]" position="attributes">
                    <attribute name="class">slae_line_edit</attribute>
                </xpath>
                -->

                <xpath expr="//form[1]/header[1]/field[@name='state']" position="attributes">
                    <attribute name="statusbar_visible">borrador_pedido_abierto,draft,sent,sale</attribute>
                </xpath>
                <xpath expr="//button[@name='action_quotation_send']" position="attributes">
                    <attribute name="states">draft,borrador_pedido_abierto</attribute>
                </xpath>
                <xpath expr="//button[@name='action_quotation_send']" position="attributes">
                    <attribute name="states">draft,borrador_pedido_abierto</attribute>
                </xpath>



                <xpath expr="//form[1]/sheet[1]/notebook[1]/page[@name='order_lines']/field[@name='order_line']/tree[1]/field[@name='product_template_id']" position="after">
                    <field name="default_code_product" readonly="1" optional="show"/>
                    <field name="codigo_cliente" readonly="1" optional="show" force_save="1"/>
                    <field name="pedido_cliente" optional="show" force_save="1"/>
                    <field name="codigo_alterno" optional="show" force_save="1"/>
                    <field name="lot_id" domain="[('product_id','=', product_id)]" context="{'default_product_id': product_id}"/>
                    <field name="fecha_programada" optional="show" force_save="1" invisible="1"/>
                    <field name="c_r_l_p_a" optional="show" force_save="1" readonly="1"/>
                    <field name="cantidad_reservada" force_save="1" optional="show" readonly="1" invisible="1"/>
                    <field name="order_partner_id" invisible="1"/>
                    <field name="order_id" invisible="1"/>
                    <field name="confirma_venta_directa" force_save="1" optional="show" invisible="1"/>
                    <field name="linea_confirmada" force_save="1" optional="show" readonly="1" invisible="1"/>
                </xpath>




                <xpath expr="//button[@name='action_confirm']" position="attributes">
                    <attribute name="name">conf</attribute>
                </xpath>

                <xpath expr="//button[@name='action_confirm']" position="attributes">
                    <attribute name="name">conf</attribute>
                    <attribute name="attrs">{'invisible': [('state', 'not in', ['draft', 'borrador_pedido_abierto'])]}</attribute>
                </xpath>

                <xpath expr="//button[@name='action_cancel']" position="attributes">
                    <attribute name="name">cancelar</attribute>
                    <attribute name="states">draft,sent,sale,borrador_pedido_abierto</attribute>
                </xpath>

                <xpath expr="//form[1]/sheet[1]/notebook[1]/page[@name='order_lines']/field[@name='order_line']" position="attributes">
                    <attribute name="context">{'default_order_partner_id': partner_id, 'default_pedido_cliente': pedido_cliente}</attribute>
                </xpath>

                <xpath expr="//field[@name='validity_date']" position="before">
                    <field name="es_orden_abierta" readonly="1" force_save="1" invisible="1"/>
                    <field name="pedido_abierto_origen" readonly="1" force_save="1" attrs="{'invisible': [('pedido_abierto_origen', '=', False)]}"/>
                    <field name="pedidos_abiertos_origen" readonly="1" force_save="1" attrs="{'invisible': [('pedidos_abiertos_origen', '=', False)]}"/>
                    <field name="creado_por_pedido_abierto" invisible="1"/>
                </xpath>

                <xpath expr="//field[@name='payment_term_id']" position="after">
                    <field name="horario_de_entrega" />
                    <field name="pedido_cliente" />
                </xpath>

                <xpath expr="//form/header" position="inside">
                    <button name="get_lista_empaque" string="Lista empaque" type="object" />
                </xpath>

                <xpath expr="//form[1]/sheet[1]/notebook[1]/page[@name='order_lines']/field[@name='order_line']/tree[1]/field[@name='product_uom']" position="attributes">
                    <attribute name="string">Unidad de medida</attribute>
                </xpath>

            </field>
        </record>

    </data>
</odoo>