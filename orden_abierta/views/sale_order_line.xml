<odoo>
    <data>

        <record model="ir.ui.view" id="sale_order_form_update">
            <field name="name">sale.order.form.update</field>
            <field name="model">sale.order</field>
            <field name="inherit_id" ref="sale.view_order_form"/>
            <field name="arch" type="xml">
                <xpath expr="//form[1]/sheet[1]/notebook[1]/page[@name='order_lines']/field[@name='order_line']/tree[1]/field[@name='product_id']" position="after">
                    <field name="codigo_cliente" />
                    <field name="pedido_cliente" />
                    <field name="fecha_programada" />
                </xpath>

                <xpath expr="//button[@name='action_confirm']" position="attributes">
                    <attribute name="name">conf</attribute>
                    <!--<attribute name="attrs">{'invisible': ['|', ('state', 'not in', ['sent']), ('bloqueo_limite_credito', '=', True)] }</attribute>-->
                    <attribute name="invisible">1</attribute>
                </xpath>

                <!--
                <xpath expr="//button[@name='action_confirm']" position="attributes">
                    <attribute name="name">conf</attribute>
                    <!--<attribute name="attrs">{'invisible': ['|', ('state', 'in', ['cancel','done']), ('bloqueo_limite_credito', '=', True)] }</attribute>
                    <!--<attribute name="attrs">{'invisible': ['|', ('state', 'in', ['cancel', 'done', 'sale'])] }</attribute>
                </xpath>
                -->

            </field>
        </record>

    </data>
</odoo>