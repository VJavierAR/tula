<odoo>
    <data>

        <record id="pedido_abierto_view_tree" model="ir.ui.view">
            <field name="name">pedido.abierto.tree</field>
            <field name="model">pedido.abierto</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="id"/>
                    <field name="name" string="Orden abierta"/>
                    <field name="create_date" string="Creado el"/>
                    <field name="partner_id"/>
                    <field name="user_id"/>
                    <field name="company_id"/>
                    <field name="state"/>
                </tree>
            </field>
        </record>

        <record id="pedido_abierto_view_form" model="ir.ui.view">
            <field name="name">pedido.abierto.form</field>
            <field name="model">pedido.abierto</field>
            <field name="arch" type="xml">
                <form string="Pedido abierto" class="o_sale_order">
                    <header>
                        <button name="crear_pedido_wizard" string="Crear Pedido" type="object" class="btn-primary"/>
                        <field name="state" widget="statusbar" statusbar_visible="borrador,abierto,confirmado,expirado"
                               readonly="1"/>
                    </header>
                    <sheet>

                        <div class="oe_button_box" name="button_box">
                            <button name="get_sales_directas" type="object" class="oe_stat_button" icon="fa-globe icon">
                                <!--<field string="Pedidos cliente" name="pedidos_count" />-->
                                <div class="o_field_widget o_stat_info">
                                    <span class="o_stat_text">Pedidos</span>
                                    <span class="o_stat_text">directos</span>
                                </div>
                            </button>
                            <button name="get_lineas_abiertas" type="object" class="oe_stat_button"
                                    icon="fa-globe icon">
                                <!--<field string="Pedidos cliente" name="pedidos_count" />-->
                                <div class="o_field_widget o_stat_info">
                                    <span class="o_stat_text">Lineas</span>
                                    <span class="o_stat_text">abiertas</span>
                                </div>
                            </button>
                        </div>

                        <div class="oe_title">
                            <h1>
                                <field name="name" readonly="1"/>
                            </h1>
                        </div>
                        <group>
                            <group>
                                <field name="id" invisible="1"/>
                                <field name="partner_id" required="1" widget="res_partner_many2one"
                                       context="{'res_partner_search_mode': 'customer', 'show_address': 1, 'show_vat': True}"
                                       options="{&quot;always_reload&quot;: True}"/>
                                <field name="company_id" options="{'no_create': True}"
                                       groups="base.group_multi_company"/>
                                <field name="pricelist_id" groups="product.group_product_pricelist"
                                       options="{'no_open':True,'no_create': True}"/>

                                <field name="pedido_cliente"/>
                            </group>
                            <group>
                                <field name="user_id"/>
                                <field name="id_orden_temp" invisible="1"/>
                                <field name="create_date" string="Fecha de solicitud"/>
                                <field name="plazo_de_pago" readonly="0" force_save="1"/>
                                <field name="pricelist_id" invisible="0" force_save="1"/>
                                <field name="currency_id" invisible="0" force_save="1"/>

                            </group>
                        </group>
                        <notebook>
                            <page string="Lineas de pedido" name="order_lines">
                                <field name="lineas_pedido"
                                       context="{'default_order_partner_id': partner_id, 'default_creado_desde_pedido_abierto': True}"
                                >
                                    <tree class="slae_line_edit" editable="bottom">

                                        <!-- We do not display the type because we don't want the user to be bothered with that information if he has no section or note. -->
                                        <field name="linea_relacionada" invisible="1"/>
                                        <field name="company_id" invisible="1"/>

                                        <field name="product_id"
                                               options="{'no_open': True}" force_save="1"
                                               widget="product_configurator"/>
                                        <!--context="{                                             'partner_id': parent.partner_id,                                             'quantity': product_uom_qty,                                             'pricelist': parent.pricelist_id,                                             'uom':product_uom,                                             'company_id': parent.company_id,                                             'default_lst_price': price_unit,                                             'default_description_sale': name                                         }"-->

                                        <field name="pedido_abierto_rel" invisible="1"/>
                                        <field name="default_code_product" readonly="1" optional="show"/>
                                        <field name="codigo_cliente" readonly="1" optional="show"/>
                                        <field name="pedido_cliente" optional="show"/>
                                        <field name="codigo_alterno" optional="show"/>

                                        <field name="product_uom_qty" force_save="1"/>
                                        <field name="product_uom" force_save="1" invisible="0"
                                               options="{'no_open': True, 'no_create': True}" optional="show"/>
                                        <field name="price_unit"/>
                                        <field name="fecha_programada" optional="show"/>
                                        <field name="cantidad_reservada" force_save="1" optional="show" readonly="1"
                                               invisible="1"/>
                                        <field name="order_partner_id" invisible="1"/>
                                        <field name="name" widget="section_and_note_text" optional="show"
                                               invisible="1"/>

                                        <field name="cantidad_pedida" readonly="1" force_save="1"/>
                                        <field name="cantidad_facturada" readonly="1"/>
                                        <field name="cantidad_entregada" readonly="1"/>
                                        <field name="cantidad_restante" readonly="1" force_save="1"/>

                                        <field name="tax_id" widget="many2many_tags"
                                               options="{'no_create': True}"
                                               domain="[('type_tax_use','=','sale'),('company_id','=',parent.company_id)]"
                                               optional="show"/>
                                        <field name="price_subtotal" widget="monetary"/>


                                        <field name="price_unit" invisible="1"/>
                                        <field name="discount" string="Disc.%"
                                               groups="product.group_discount_per_so_line" optional="show"
                                               invisible="1"/>


                                        <field name="price_total" widget="monetary" invisible="1"/>
                                        <field name="price_tax" invisible="1"/>
                                        <field name="currency_id" invisible="1"/>
                                        <field name="company_id" invisible="1"/>
                                        <field name="creado_desde_pedido_abierto" invisible="1"/>
                                        <field name="es_de_sale_order" force_save="1" invisible="1"/>

                                    </tree>
                                    <form>
                                        <field name="linea_relacionada"/>
                                        <field name="company_id" invisible="1"/>
                                    </form>

                                    <!--
                                    <kanban class="o_kanban_mobile">
                                        <field name="name"/>
                                        <field name="product_id"/>
                                        <field name="product_uom_qty"/>
                                        <field name="product_uom" groups="uom.group_uom"/>
                                        <field name="price_subtotal"/>
                                        <field name="price_total"/>
                                        <field name="price_tax" invisible="1"/>
                                        <field name="price_total" invisible="1"/>
                                        <field name="price_unit"/>
                                        <field name="display_type"/>
                                        <field name="tax_id" invisible="1"/>
                                        <field name="company_id" invisible="1"/>
