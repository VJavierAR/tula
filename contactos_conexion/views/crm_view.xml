<odoo>
    <data>
        <record model="ir.ui.view" id="crm_lead_update">
            <field name="name">crm.lead.update</field>
            <field name="model">crm.lead</field>
            <field name="inherit_id" ref="crm.crm_lead_view_form"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='team_id']" position="after">
                    <field name="lugar_trabajo" force_save="1"/>
                    <field name="nombre_establecimiento" force_save="1"/>
                    <field name="razon_social" force_save="1"/>
                    <field name="direccion_comercial" force_save="1"/>
                    <field name="proviene_de_iniciativa" force_save="1" invisible="0"/>
                    <field name="fecha_convertida_oportunidad" force_save="1" invisible="0"/>
                    <field name="tiempo_de_conversion" force_save="1" invisible="0"/>
                </xpath>
            </field>
        </record>

        <record model="ir.ui.view" id="crm_case_tree_view_oppor_update">
            <field name="name">crm.case.tree.view.oppor.update</field>
            <field name="model">crm.lead</field>
            <field name="inherit_id" ref="crm.crm_case_tree_view_oppor"/>
            <field name="arch" type="xml">
                <xpath expr="/tree/*" position="before">
                    <header>
                        <button name="agrega_dias_write_date" string="Agrega días" type="object" class="btn-primary"/>
                        <button name="agrega_meses_write_date" string="Agrega meses" type="object" class="btn-primary"/>
                    </header>
                </xpath>
                <xpath expr="//field[@name='name']" position="before">
                    <field name="create_date" force_save="1"/>
                    <field name="id" force_save="1"/>
                    <field name="write_date" force_save="1"/>
                    <field name="proviene_de_iniciativa" force_save="1" invisible="0"/>
                    <field name="fecha_convertida_oportunidad" force_save="1" invisible="0"/>
                    <field name="tiempo_de_conversion" force_save="1" invisible="0"/>
                </xpath>
            </field>
        </record>

        <record model="ir.ui.view" id="crm_case_tree_view_leads_update">
            <field name="name">crm.case.tree.view.leads.update</field>
            <field name="model">crm.lead</field>
            <field name="inherit_id" ref="crm.crm_case_tree_view_leads"/>
            <field name="arch" type="xml">
                <xpath expr="/tree/*" position="before">
                    <header>
                        <button name="agrega_dias_write_date" string="Agrega días" type="object" class="btn-primary"/>
                        <button name="agrega_meses_write_date" string="Agrega meses" type="object" class="btn-primary"/>
                        <button name="decrmenta_dias_write_date" string="Decrmenta días" type="object" class="btn-primary"/>
                    </header>
                </xpath>
                <xpath expr="//field[@name='name']" position="before">
                    <field name="create_date" force_save="1"/>
                    <field name="id" force_save="1"/>
                    <field name="write_date" force_save="1"/>
                    <field name="create_date" force_save="1"/>
                    <field name="proviene_de_iniciativa" force_save="1" invisible="0"/>
                    <field name="fecha_convertida_oportunidad" force_save="1" invisible="0"/>
                    <field name="tiempo_de_conversion" force_save="1" invisible="0"/>
                </xpath>
            </field>
        </record>

        <record model="ir.ui.view" id="view_crm_case_leads_filter_update">
            <field name="name">view.crm.case.leads.filter.update</field>
            <field name="model">crm.lead</field>
            <field name="inherit_id" ref="crm.view_crm_case_leads_filter"/>
            <field name="arch" type="xml">
                <xpath expr="//search" position="inside">
                    <!--<field name=""/>-->
                    <separator/>
                    <filter string="Iniciativas creadas en los ultimos 30 días"
                            name="iniciativas_30"
                            domain="[('create_date', '&gt;=', (context_today() + relativedelta(days=-30, weekday=0)).strftime('%Y-%m-%d') )]" />
                    <filter string="Iniciativas creadas en los ultimos 60 días"
                            name="iniciativas_60"
                            domain="[('create_date', '&gt;=', (context_today() + relativedelta(days=-60, weekday=0)).strftime('%Y-%m-%d') )]" />
                    <filter string="Iniciativas creadas en los ultimos 90 días"
                            name="iniciativas_90"
                            domain="[('create_date', '&gt;=', (context_today() + relativedelta(days=-90, weekday=0)).strftime('%Y-%m-%d') )]" />
                    <filter string="Iniciativas no actualizadas en 5 días"
                            name="iniciativas_5"
                            domain="[('write_date', '&gt;=', (context_today() + relativedelta(days=-5, weekday=0)).strftime('%Y-%m-%d') )]" />
                    <separator/>
                </xpath>
            </field>
        </record>


        <record model="ir.ui.view" id="view_crm_case_opportunities_filter_update">
            <field name="name">view.crm.case.opportunities.filter.update</field>
            <field name="model">crm.lead</field>
            <field name="inherit_id" ref="crm.view_crm_case_opportunities_filter"/>
            <field name="arch" type="xml">
                <xpath expr="//search" position="inside">
                    <!--<field name=""/>-->
                    <separator/>
                    <filter string="Iniciativas convertidas en oportunidades"
                            name="iniciativas_to_oportunidad"
                            domain="[('proviene_de_iniciativa', '=', True)]" />
                    <filter string="Iniciativas convertidas en oportunidades"
                            name="iniciativas_to_oportunidad"
                            domain="[('proviene_de_iniciativa', '=', True)]" />
                    <separator/>
                    <filter string="Iniciativas convertidas en oportunidades" name="iniciativaToOportunidad" context="{'group_by': 'proviene_de_iniciativa'}"/>
                    <filter string="Tiempo de conversión (iniciativa a oportunidad)" name="iniciativaToOportunidadTime" context="{'group_by': 'tiempo_de_conversion'}"/>
                    <separator/>
                </xpath>
            </field>
        </record>

    </data>
</odoo>