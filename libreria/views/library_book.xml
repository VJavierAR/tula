

<odoo>
    <data>
        
        <record id="library_book_view_form" model="ir.ui.view">
            <field name="name">Library Books Form</field>
            <field name="model">library.book</field>                
            <field name="arch" type="xml">
                <form>
                    <group>
                        <group>
                            <field name="name"/>
                            <field name="author_ids" widget="many2many_tags"/>

                            <button name="make_available" string="Cambiar a disponible" type="objet">
                            <button name="make_borrowed" string="Cambiar a borrador" type="objet">
                            <button name="make_lost" string="Cambiar a perdido" type="objet">
                            
                            <field name="state" widget="statusbar"/>
                            <field name="pages"/>
                            <field name="notes"/>
                        </group>
                        <group>
                            <field name="short_name"/>
                            <field name="date_release"/>
                            <field name="date_updated"/>
                            <field name="cover" widget="image" class="oe_avatar"/>
                            <field name="reader_rating"/>
                            <field name="cost_price"/>
                            <field name="retail_price"/>
                            <field name="currency_id"/>
                            <field name="author_ids"/>
                            <field name="editorial_id"/>
                            <field name="categoria_id"/>
                            <field name="age_days"/>
                            <field name="publisher_city"/>
                            <field name="ref_doc_id"/>

                        </group>
                        <group>
                            <field name="description"/>
                        </group>
                        <group>
                        </group>
                    </group>
                </form>
            </field>
        </record>
        
        <record id="library_book_view_tree" model="ir.ui.view">
            <field name="name">Library Books List</field>
            <field name="model">library.book</field>                
            <field name="arch" type="xml">
                <tree>
                    <field name="name"/>
                    <field name="short_name"/> 

                </tree>
            </field>
        </record>
        <!--ERRRROOR-->
        <record id="library_book_view_search" model="ir.ui.view">
            <field name="name">Library Books Search</field>
            <field name="model">library.book</field>                
            <field name="arch" type="xml">
                <search>
                    <field name="name"/>
                    <field name="author_ids"/> 
                    <filter     string="No authors" name="without_author" domain="[('author_ids','=',False)]"/>
                </search>
            </field>
        </record>
        
        <record id='library_book_action' model='ir.actions.act_window'>  
            <field name="name">Library Books</field>					
            <field name="res_model">library.book</field> 
            <field name="view_mode">tree,form</field> 
        </record>
