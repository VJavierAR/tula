<odoo>
    <data>

        <record model="ir.ui.view" id="requisito_compra_view_kanban">
            <field name="name">requisito.compra.kanban</field>
            <field name="model">requisito.compra</field>
            <field name="arch" type="xml">
                <kanban string="Requerimiento inventario" default_group_by="solicitado_por">
                    <templates>
                        <t t-name="kanban-box">
                            <div t-attf-class="oe_kanban_card oe_kanban_global_click">
                                <div class="o_kanban_card_content">
                                    <field name="name" modifiers="{&quot;required&quot;: true}"/>
                                    <field name="state"/>
                                    <field name="partner_id" display="full"/>
                                    <field name="solicitado_por" invisible="1"/>
                                </div>
                            </div>
                        </t>
                    </templates>
                </kanban>
            </field>
        </record>



        <record model="ir.ui.view" id="requisito_compra_view_tree">
            <field name="name">requisito.compra.tree</field>
            <field name="model">requisito.compra</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="id"/>
                    <field name="name"/>
                    <field name="partner_id"/>
                    <field name="create_date" string="Creado el"/>
                    <field name="solicitado_por" string="Requerido por"/>
                    <field name="realizado_por" />
                    <field name="state"/>
                </tree>
            </field>
        </record>

        <record model="ir.ui.view" id="requisito_compra_view_form">
            <field name="name">requisito.compra.form</field>
            <field name="model">requisito.compra</field>
            <field name="arch" type="xml">
                <form>
                    <header>
                        <button name="cambia_a_por_aprobar" string="Pedir aprobación" type="object" class="btn-primary"/>
                        <button name="cambia_a_aprobado" string="Aprobar" type="object" class="btn-primary"/>
                        <button name="cambia_a_realizado" string="Realizar" type="object" class="btn-primary"/>
                        <button name="cambia_a_rechazado" string="Rechazado" type="object" class="btn-primary"/>
                        <button name="cambia_a_reiniciar" string="Reiniciar" type="object" class="btn-primary"/>
                        <field name="state" widget="statusbar" readonly="1"/>
                    </header>
                    <sheet>

                        <div class="oe_button_box" name="button_box">
                            <button name="get_lineas" type="object" class="oe_stat_button"
                                    icon="fa-list">
                                <field string="" name="num_lineas" />
                                <div class="o_field_widget o_stat_info">
                                    <span class="o_stat_text">Lineas</span>
                                </div>
                            </button>
                        </div>

                        <div class="oe_title">
                            <h1>
                                <field name="name" readonly="1"/>
                            </h1>
                        </div>
                        <group>
                            <group>
                                <field name="partner_id"/>
                                <field name="solicitado_por"/>
                                <field name="aprobado_por"/>
                                <field name="realizado_por"/>
                                <field name="create_date" string="Fecha de creación"/>
                                <field name="tipo_de_albaran"/>
                            </group>
                            <group>
                                <field name="origin"/>
                                <field name="descripcion"/>
                                <field name="grupo_de_adquisiciones"/>
                                <field name="company_id" invisible="1"/>
                            </group>
                        </group>

                        <notebook>
                            <page string="Productos" name="order_lines">
                                <field name="lineas_pedido">
                                    <tree editable="bottom">
                                        <field name="requisito_compra_rel" invisible="1"/>
                                        <field name="product_id" />
                                        <field name="numero_de_parte" />
                                        <field name="cantidad_inventario" />
                                        <field name="a_facturar" readonly="1" />
                                        <field name="cantidad_a_restar_o_sumar" />
                                        <field name="punto_reorden" />
                                        <field name="precio_usd" readonly="1"/>
                                        <field name="realizado" />
                                        <field name="revisado" />
                                        <field name="saldo_pedido_abierto" readonly="1"/>
                                        <field name="fecha_de_solicitud" invisible="1"/>
                                        <field name="saldo_actual_pedido_abierto" readonly="1"/>
                                        <field name="comentarios" />
                                        <field name="company_id" invisible="1"/>
                                    </tree>
                                    <form>
                                        <group string="Información">
                                            <group>
                                                <field name="product_id" />
                                                <field name="numero_de_parte" />
                                                <field name="name" />
                                                <field name="company_id" invisible="1"/>
                                            </group>
                                            <group>
                                                <field name="order_partner_id" />
                                                <field name="unidad_de_medidad" />
                                                <field name="fecha_de_solicitud" invisible="1"/>
                                            </group>
                                        </group>
                                        <group string="Captura">
                                            <group>
                                                <field name="cantidad_inventario" />
                                                <field name="a_facturar" readonly="1"/>
                                                <field name="cantidad_a_restar_o_sumar" />
                                                <field name="punto_reorden" />
                                            </group>
                                            <group>
                                                <field name="comentarios" />
                                                <field name="realizado" />
                                                <field name="revisado" />
                                            </group>
                                        </group>

                                        <group string="Pedido abierto uno">
                                            <group>
                                                <field name="p_a_linea_programado" />
                                                <field name="p_c_linea_programado" />
                                                <field name="r_linea_programado" />
                                                <field name="cancelado" />
                                            </group>
                                            <group>
                                                <field name="precio_usd" />
                                                <field name="saldo_actual_pedido_l_p" />
                                                <field name="cantidad_facturada_l_p" />
                                            </group>
                                        </group>

                                        <group>
                                            <group string="Pedido abierto dos">
                                                <field name="p_a_linea_programado_dos" />
                                                <field name="p_c_linea_programado_dos" />
                                                <field name="r_linea_programado_dos" />
                                            </group>
                                            <group string="Pedido abierto tres">
                                                <field name="p_a_linea_programado_tres" />
                                                <field name="p_c_linea_programado_tres" />
                                                <field name="r_linea_programado_tres" />
                                            </group>
                                        </group>

                                        <group string="Seguimiento">
                                            <group >
                                                <field name="cantidad_pendiente_de_recibir" />
                                                <field name="cantidad_cancelada" />
                                            </group>
                                            <group>
                                                <field name="cantidad_realizada" />
                                            </group>
                                        </group>

                                    </form>
                                </field>
                            </page>
                        </notebook>

                    </sheet>
                </form>

            </field>
        </record>

    </data>
</odoo>