<odoo>
    <data>

        <!-- ventas -->
        <!-- Your Action Window Definition -->
        <record model="ir.actions.act_window" id="requerimiento_action_window">
            <field name="name">Requerimiento Inventario</field>
            <field name="res_model">requisito.compra</field>
            <field name="view_mode">kanban,tree,form</field>
            <field name="view_id" ref="requisito_compra_view_tree"/>
            <field name="view_ids" eval="[(5, 0, 0),
            (0, 0, {'view_mode': 'kanban', 'view_id': ref('requisito_compra_view_kanban')}),
    	    (0, 0, {'view_mode': 'tree', 'view_id': ref('requisito_compra_view_tree')}),
    	    (0, 0, {'view_mode': 'form', 'view_id': ref('requisito_compra_view_form')})]"/>
        </record>

        <record model="ir.actions.act_window" id="requisito_compra_linea_action_window">
            <field name="name">Requisito de Compra Línea</field>
            <field name="res_model">requisito.compra.linea</field>
            <field name="view_mode">tree,form,kanban</field>
            <field name="view_id" ref="requisito_compra_linea_view_tree"/>
        </record>

        <menuitem id="kanban_root"
                  name="Kanban"
                  web_icon="kanban, static/description/helpdesk-icon.png"
        />

        <menuitem id="requerimiento_inventario_menu"
                  name="Requerimiento inventario"
                  parent="kanban_root"
                  sequence="0"
                  action="requerimiento_action_window"
        />

        <menuitem id="requerimiento_inventario"
                  name="Requerimiento inventario"
                  parent="kanban_root"
                  sequence="0"
                  action="requerimiento_action_window"
        />
        <menuitem id="requisito_compra_linea"
                  name="Requisito de Compra Línea"
                  parent="requerimiento_inventario"
                  sequence="1"
                  action="requisito_compra_linea_action_window"
        />

        <!-- transportista -->
        <record model="ir.actions.act_window" id="requerimiento_transportista_action_window">
            <field name="name">Requerimiento Inventario Transportista</field>
            <field name="res_model">requisito.compra</field>
            <field name="view_mode">kanban,tree,form</field>
            <field name="view_ids" eval="[(5, 0, 0),
            (0, 0, {'view_mode': 'kanban', 'view_id': ref('requisito_compra_transportista_view_kanban')}),
    	    (0, 0, {'view_mode': 'tree', 'view_id': ref('requisito_compra_transportista_view_tree')}),
    	    (0, 0, {'view_mode': 'form', 'view_id': ref('requisito_compra_transportista_view_form')})]"/>
        </record>

        <menuitem id="requerimiento_inventario_transportista"
                  name="Requerimiento inventario transportista"
                  parent="kanban_root"
                  sequence="1"
                  action="requerimiento_transportista_action_window"
        />

    </data>
</odoo>