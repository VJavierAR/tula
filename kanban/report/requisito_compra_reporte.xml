        <!--<t t-name="orden_abierta.reporte_lista_empaques">-->
        <t t-call="web.html_container">
            <t t-foreach="docs" t-as="doc">
                <t t-set="doc" t-value="doc.with_context(lang=doc.partner_id.lang)"/>
                <t t-call="web.external_layout">
                    <t t-set="address">
                        <div t-field="doc.partner_id"
                             t-options="{&quot;widget&quot;: &quot;contact&quot;, &quot;fields&quot;: [&quot;address&quot;, &quot;name&quot;], &quot;no_marker&quot;: True}"/>
                        <p t-if="doc.partner_id.vat"><t t-esc="doc.company_id.country_id.vat_label or 'Tax ID'"/>:
                            <span t-field="doc.partner_id.vat"/>
                        </p>
                    </t>
                    <!--
                    <t t-if="doc.partner_shipping_id == doc.partner_invoice_id                              and doc.partner_invoice_id != doc.partner_id                              or doc.partner_shipping_id != doc.partner_invoice_id">
                        <t t-set="information_block">

                            <strong t-if="doc.partner_shipping_id == doc.partner_invoice_id">Invoicing and Shipping
                                Address:
                            </strong>
                            <strong t-if="doc.partner_shipping_id != doc.partner_invoice_id">Invoicing Address:</strong>
                            <div t-field="doc.partner_invoice_id"
                                 t-options="{&quot;widget&quot;: &quot;contact&quot;, &quot;fields&quot;: [&quot;address&quot;, &quot;name&quot;, &quot;phone&quot;], &quot;no_marker&quot;: True, &quot;phone_icons&quot;: True}"/>
                            <t>
                                <strong>Dirección de entrega:</strong>
                                <div t-field="doc.partner_shipping_id"
                                     t-options="{&quot;widget&quot;: &quot;contact&quot;, &quot;fields&quot;: [&quot;address&quot;, &quot;name&quot;, &quot;phone&quot;], &quot;no_marker&quot;: True, &quot;phone_icons&quot;: True}"/>
                            </t>

                        </t>
                    </t>
                    -->
                    <div class="page" style="page-break-after: always;">
                        <div class="oe_structure"/>
                        <div>
                            <strong>Horario de entrega:</strong>
                            <t t-if="doc.partner_id.horario_de_entrega">
                                <span t-field="doc.partner_id.horario_de_entrega"/>
                            </t>
                            <t t-if="doc.partner_id.horario_de_entrega == False">
                                No disponible
                            </t>
                        </div>
                        <h2 class="mt16">
                            <t>
                                <span>Requerimiento de Inventario</span>
                            </t>
                        </h2>

                        <div class="row mt32 mb32" id="informations">
                            <div t-if="doc.partner_id" class="col-auto mw-100 mb-2">
                                <strong>Cliente:</strong>
                                <p class="m-0" t-field="doc.partner_id"/>
                            </div>
                            <div t-if="doc.name"
                                 class="col-auto mw-100 mb-2">
                                <strong>Referencia:</strong>
                                <p class="m-0" t-field="doc.name"/>
                            </div>
                            <div t-if="doc.fecha_de_solicitud" class="col-auto mw-100 mb-2">
                                <strong>Fecha solicitud:</strong>
                                <p class="m-0" t-field="doc.fecha_de_solicitud"
                                   t-options="{&quot;widget&quot;: &quot;date&quot;}"/>
                            </div>
                            <div t-if="doc.solicitado_por" class="col-auto mw-100 mb-2">
                                <strong>Solicitado por:</strong>
                                <p class="m-0" t-field="doc.solicitado_por"/>
                            </div>
                            <div t-if="doc.realizado_por" class="col-auto mw-100 mb-2">
                                <strong>Realizado por:</strong>
                                <p class="m-0" t-field="doc.realizado_por"/>
                            </div>

                        </div>

                        <table class="table table-sm o_main_table">
                            <thead>
                                <tr>
                                    <th name="th_codigo_articulo" class="text-left">Código/artículo</th>
                                    <th name="th_cliente_codigo" class="text-left">Cliente código</th>
                                    <th name="th_inventario_fisico" class="text-left">Inventario físico</th>
                                    <th name="th_punto_reorden" class="text-left">Punto reorden</th>
                                    <th name="th_pedido_cliente" class="text-left">Pedido cliente</th>
                                    <th name="th_saldo_po" class="text-right">Saldo PO</th>
                                    <th name="th_pedido_cliente_dos" class="text-right">Pedido cliente</th>
                                    <th name="th_saldo_po_dos" class="text-right">Saldo PO</th>
                                    <th name="th_cantidad_a_facturar" class="text-right">Cant. a facturar</th>
                                    <th name="th_precio_usd" class="text-right">Precio USD</th>
                                    <th name="th_comentarios" class="text-right">Comentarios</th>

                                </tr>
                            </thead>
                            <tbody class="sale_tbody">

                                <t t-set="current_subtotal" t-value="0"/>

                                <t t-foreach="doc.lineas_pedido" t-as="line">
                                    <!--
                                    <t t-set="current_subtotal" t-value="current_subtotal + line.price_subtotal"
                                       groups="account.group_show_line_subtotals_tax_excluded"/>
                                    <t t-set="current_subtotal" t-value="current_subtotal + line.price_total"
                                       groups="account.group_show_line_subtotals_tax_included"/>
                                    -->
                                    <!--
                                    t-att-class="'bg-200 font-weight-bold o_line_section' if line.display_type == 'line_section' else 'font-italic o_line_note' if line.display_type == 'line_note' else ''"
                                    -->
                                    <tr>
                                        <!-- t-if="not line.display_type" -->
                                        <t >
                                            <td name="td_codigo_articulo">
                                                <span t-field="line.product_id.display_name"/>
                                            </td>
                                            <td name="td_cliente_codigo">
                                                <span t-field="line.numero_de_parte"/>
                                            </td>
                                            <td name="td_inventario_fisico">
                                                <span t-field="line.cantidad_inventario"/>
                                            </td>

                                            <td name="td_punto_reorden">
                                                <span t-field="line.punto_reorden"/>
                                            </td>
                                            <td name="td_pedido_cliente">
                                                <span t-field="line.p_c_l_prog"/>
                                            </td>
                                            <td name="td_saldo_po">
                                                <span t-field="line.saldo_pedido_abierto"/>
                                            </td>
                                            <td name="td_pedido_cliente_dos">
                                                <t t-if="line.p_a_l_prog_dos.id">
                                                    <span t-field="line.p_c_l_prog_dos"/>
                                                </t>
                                                <t t-if="not line.p_a_l_prog_dos.id">
                                                    No disponible
                                                </t>
                                            </td>
                                            <td name="td_saldo_po_dos">
                                                <span t-field="line.r_l_prog_dos"/>
                                            </td>
                                            <td name="td_cantidad_a_facturar">
                                                <span t-field="line.a_facturar"/>
                                            </td>
                                            <td name="td_precio_usd">
                                                <span t-field="line.precio_usd"/>
                                            </td>
                                            <td name="td_comentarios">
                                                <span t-field="line.comentarios"/>
                                            </td>

                                        </t>

                                    </tr>


                                </t>
                            </tbody>
                        </table>





                        <div class="oe_structure"/>


                    </div>
                </t>
            </t>
        </t>


    </template>

</odoo>