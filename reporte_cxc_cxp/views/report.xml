<?xml version="1.0" encoding="utf-8"?>
<odoo>
<data>
    <record id="view_account_invoice_report_pivot" model="ir.ui.view">
         <field name="name">account.invoice.report.pivot</field>
         <field name="model">account.move.report.ola</field>
         <field name="arch" type="xml">
             <pivot string="Invoices Analysis" disable_linking="True">
                 <field name="partner_id" type="row"/>
                 <field name="invoice_date_due" type="col"/>
                 <field name="amount_residual" type="measure"/>
             </pivot>
         </field>
    </record>

    <record id="view_account_invoice_report_graph" model="ir.ui.view">
         <field name="name">account.invoice.report.graph</field>
         <field name="model">account.move.report.ola</field>
         <field name="arch" type="xml">
             <graph string="Invoices Analysis" type="line">
                 <field name="partner_id"/>
                 <field name="amount_residual" type="measure"/>
             </graph>
         </field>
    </record>

    <record id="view_account_invoice_report_tree" model="ir.ui.view">
        <field name="name">account.invoice.report.search</field>
        <field name="model">account.move.report.ola</field>
        <field name="arch" type="xml">
            <tree string="Invoices Analysis" expand="1" import="0" create="0" groups_limit="30"
            decoration-danger="dias_vencida > 0" decoration-warning="dias_vencida > -8" >
                <field name="partner_id"/>
                <field name="currency_id" invisible="1"/>
                <field name="name"/>
                <field name="invoice_date"/>
                <field name="invoice_date_due"/>
                <field name="invoice_payment_term_id"/>
                <field name="dias_vencida" invisible="1"/>
                <field name="dias_vencida_mostrar"/>
                <field name="amount_untaxed"/>
                <field name="amount_tax"/>
                <field name="amount_total"/>
                <field name="amount_residual"/>
            </tree>
        </field>
    </record>

    <record id="view_account_invoice_report_search" model="ir.ui.view">
        <field name="name">account.invoice.report.search</field>
        <field name="model">account.move.report.ola</field>
        <field name="arch" type="xml">
            <search string="Invoices Analysis">
                <filter string="Dolores" name="currency_id" domain="[('currency_id.name','=','USD')]"/>
                <filter string="Colones" name="currency_id" domain="[('currency_id.name','=','CRC')]"/>
                <filter string="Vencidas" name="dias_vencida" domain="[('dias_vencida','>', 0)]"/>
                <filter string="Prontas a vencer" name="dias_vencida"
                        domain="[('dias_vencida','>', -8), ('dias_vencida', '&lt;', 1)]"
                        help="A vencer en 7 dÃ­as o menos"
                />
                <field name="name"/>
                <field name="invoice_date"/>
                <field name="invoice_date_due"/>
                <separator/>
                <field name="partner_id" operator="child_of"/>
                <field name="invoice_user_id" />
                <group expand="1" string="Group By">
                    <!--filter string="Empresa" name="partner_id" context="{'group_by':'partner_id','residual_visible':True}"/-->
                    <!--filter string="Empresa" name="partner_id" context="{'group_by':'currency_id',}"/-->
                    <separator orientation="vertical" />
                    <filter string="Fecha" name="invoice_date" context="{'group_by':'invoice_date'}"/>
                    <filter string="Fecha vencimiento" name="duemonth" context="{'group_by':'invoice_date_due:month'}"/>
                </group>
            </search>
        </field>
    </record>

    <record id="action_account_invoice_report_cxc" model="ir.actions.act_window">
        <field name="name">Facturas por cobrar</field>
        <field name="res_model">account.move.report.ola</field>
        <field name="view_mode">tree,graph,pivot</field>
        <field name="context">{'group_by':['partner_id']}</field>
        <field name="domain">[('type','in', ('out_invoice', 'out_refund'))]</field>
        <field name="search_view_id" ref="view_account_invoice_report_search"/>
    </record>
    <record id="action_account_invoice_report_cxp" model="ir.actions.act_window">
        <field name="name">Facturas por pagar</field>
        <field name="res_model">account.move.report.ola</field>
        <field name="view_mode">tree,graph,pivot</field>
        <field name="context">{'group_by':['partner_id']}</field>
        <field name="domain">[('type','in', ('in_invoice', 'in_refund'))]</field>
        <field name="search_view_id" ref="view_account_invoice_report_search"/>
    </record>

    <menuitem name="Reporte CxC" action="action_account_invoice_report_cxc" id="menu_action_account_invoice_report_cxc" parent="account_reports.account_reports_partners_reports_menu" sequence="10"/>
    <menuitem name="Reporte CxP" action="action_account_invoice_report_cxp" id="menu_action_account_invoice_report_cxp" parent="account_reports.account_reports_partners_reports_menu" sequence="10"/>

</data>
</odoo>
